extends layout

block Subject
	title= L('title')
	
block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')

block Middle
	+separator(5)
	div
		div#topDiv
			h3#holder= L('title').replace(/\[.+?\]/g, "")
			img#logo(src='/img/kkutu/short_logo.png')
		div.jjoriping
			img.jjoObj.jjoEyeL(src='/img/jjoeyeL.png')
			img.jjoObj.jjoNose(src='/img/jjonose.png')
			img.jjoObj.jjoEyeR(src='/img/jjoeyeR.png')
			div.jjoDisplayBar(style='width: 325px; height: 85px; margin: auto;')
				button#game-start.jjo-display= L('gameStart')
		div#menu-bar()
			a(target='_blank', href='https://discord.gg/sEatfBw', style='background-color: #7289DA;')= L('discord')
			a(target='_blank', href='//blog.jjo.kr/', style='background-color: #4078DC;')= L('CREATOR')

	.ad(style="margin-top: 30px; margin-bottom: 40px;")
		script(async='', src='//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js')
		// kkutu-main
		ins.adsbygoogle(style='display:block', data-ad-client='ca-pub-2810659463174293', data-ad-slot='7648343786', data-ad-format='auto')
		p Google Ad

	#menus
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total
			div#server-list
		.box
			iframe#kkutu-bulletin(width="100%", height='400px', src='/kkutu_bulletin.html')
		div(style="width: 100%")
			.ad(style="margin-top: 0px !important; margin-bottom: 20px !important;")
				script(async='', src='//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js')
				// kkutu-main-banner
				ins.adsbygoogle(style='display:inline-block;width:234px;height:120px', data-ad-client='ca-pub-2810659463174293', data-ad-slot='1027041215')
				p Google Ad
			.ad(style="margin-top: 0px !important; margin-bottom: 10px !important;")
				img(src="/img/ready_banner.jpg", style="width: 100%;")
				p custom banner
			.ad(style="margin-top: 0px !important; margin-bottom: 10px !important;")
				img(src="/img/ready_banner.jpg", style="width: 100%;")
				p custom banner
			.ad(style="margin-top: 0px !important; margin-bottom: 10px !important;")
				img(src="/img/ready_banner.jpg", style="width: 100%;")
				p custom banner
			.ad(style="margin-top: 0px !important; margin-bottom: 0px !important;")
				img(src="/img/ready_banner.jpg", style="width: 100%;")
				p custom banner

	.ad(style="margin-top: 30px; margin-bottom: 40px;")
		script(async='', src='//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js')
		// kkutu-main
		ins.adsbygoogle(style='display:block', data-ad-client='ca-pub-2810659463174293', data-ad-slot='7648343786', data-ad-format='auto')
		p Google Ad
	+separator(10)
	
block Bottom
	div.bottom-legal!= L('dictionarySupport')
	div.bottom-legal!= L('etcSupport')
	script.
		(adsbygoogle = window.adsbygoogle || []).push({});