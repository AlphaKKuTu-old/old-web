extends layout

block Subject
	title= L('title')
	
block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')

block JS
	script(async='', src='//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js')

block Middle
	+separator(5)
	div
		div#topDiv
			h3#holder= L('title').replace(/\[.+?\]/g, "")
			img#logo(src='/img/kkutu/short_logo.png')
		div.jjoriping
			img.jjoObj.jjoEyeL(src='/img/jjoeyeL.png')
			img.jjoObj.jjoNose(src='/img/jjonose.png')
			img.jjoObj.jjoEyeR(src='/img/jjoeyeR.png')
			.jjoDisplayBar
				button#game-start.jjo-display= L('gameStart')
		#menu-bar
			a(target='_blank', href='https://discord.gg/sEatfBw', style='background-color: #7289DA;')= L('discord')
			a(target='_blank', href='//blog.jjo.kr/', style='background-color: #4078DC;')= L('CREATOR')

	.ad(style="margin-top: 30px; margin-bottom: 40px;")
		// kkutu-main
		ins.adsbygoogle(style='display:block', data-ad-client='ca-pub-2810659463174293', data-ad-slot='7648343786', data-ad-format='auto')
		script.
			(adsbygoogle = window.adsbygoogle || []).push({});
		p Google Ad

	#menus
		.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total
			div#server-list
		.box
			iframe#kkutu-bulletin(width="100%", height='100%', src='/kkutu_bulletin.html')
		div(style="width: 100%")
			.ad.small(style="margin-top: 0px !important; margin-bottom: 10px !important; height: 60px !important;")
				// kkutu-banner-top
				ins.adsbygoogle(style='display:block;width:234px;height:60px;margin:auto !important;', data-ad-client='ca-pub-2810659463174293', data-ad-slot='9293803229')
				script.
					(adsbygoogle = window.adsbygoogle || []).push({});
				p Google Ad
			.ad.small(style="margin-top: 0px !important; margin-bottom: 10px !important; height: 60px !important;")
				a(href=locals.ad1url)
					img(src=locals.ad1, style="margin: auto !important; display: block !important; width: 234px !important;")
				p Custom Banner
			.ad.small(style="margin-top: 0px !important; margin-bottom: 10px !important;")
				a(href=locals.ad2url)
					img(src=locals.ad2, style="margin: auto !important; display: block !important; width: 234px !important;")
				p Custom Banner
			.ad.small(style="margin-top: 0px !important; margin-bottom: 10px !important;")
				a(href=locals.ad3url)
					img(src=locals.ad3, style="margin: auto !important; display: block !important; width: 234px !important;")
				p Custom Banner
			.ad.small(style="margin-top: 0px !important; margin-bottom: 10px !important;")
				a(href=locals.ad4url)
					img(src=locals.ad4, style="margin: auto !important; display: block !important; width: 234px !important;")
				p Custom Banner
			.ad.small(style="margin-top: 0px !important; margin-bottom: 0px !important; height: 60px !important;")
				// kkutu-banner-bottom
				ins.adsbygoogle(style='display:block;width:234px;height:60px;margin:auto !important;', data-ad-client='ca-pub-2810659463174293', data-ad-slot='4600536285')
				script.
					(adsbygoogle = window.adsbygoogle || []).push({});
				p Google Ad

	.ad(style="margin-top: 30px; margin-bottom: 40px; height: 90px !important;")
		// kkutu-main
		ins.adsbygoogle(style='display:block', data-ad-client='ca-pub-2810659463174293', data-ad-slot='7648343786', data-ad-format='auto')
		script.
			(adsbygoogle = window.adsbygoogle || []).push({});
		p Google Ad
	+separator(10)
	
block Bottom
	div.bottom-legal!= L('dictionarySupport')
	div.bottom-legal!= L('etcSupport')